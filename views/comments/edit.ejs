                        <button class="btn btn-primary btn-lg btn-default btn-block">Submit</button>
                    </div>
                    
                </form>
                <a class="btn btn-lg btn-block" href="/campgrounds/<%= campground_id %>">Go Back</a>
            </div>
            
         
        </div>
    </div>
