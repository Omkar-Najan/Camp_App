<%- include("../partials/header") %>
    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">ADD A NEW COMMENT TO <%=campground.name%> </h1>
            <div style="width:40%;margin:25px auto;">
                <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                    <div class="form-group">
                        <input type="text" placeholder="text" class="form-control"  id="" name="comment[text]">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-lg btn-default btn-block">Submit</button>
                    </div>
                    
                </form>
                <a class="btn btn-lg btn-block" href="/campgrounds/<%= campground._id %>">Go Back</a>
            </div>
        </div>
    </div>
<%- include("../partials/footer") %>