<%- include("../partials/header") %>
    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Edit <%= campground.name %></h1>
            <div style="width:40%;margin:25px auto;">
                <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" value="<%= campground.name %>" id="" name="campground[name]">
                    </div>
                    <div class="form-group">
                        <input type="number" value="<%= campground.price %>"  min="0.01" step="0.01" class="form-control"  id="" name="campground[price]">
                    </div>
                    <div class="form-group">
                        <input type="text" name="campground[img]" id="" class="form-control" value="<%= campground.img %>">
                    </div> 
                    <div class="form-group">
                        <input type="text" name="campground[description]" id="" class="form-control" value="<%= campground.description %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-lg btn-default btn-block">Submit</button>
                    </div>
                    
                </form>
                <a class="btn btn-lg btn-block" href="/campgrounds/<%= campground._id %>">Go Back</a>
            </div>
            
         
        </div>
    </div>
<%- include("../partials/footer") %>